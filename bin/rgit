#!/usr/bin/env ruby

args = ARGV.join(" ")

Dir.foreach('.') do |f|
   next unless File.directory? f #only dirs
   next if f =~ /\.+/  #skip . and ..

   Dir.chdir(f) do |dir|
      if Dir.new('.').include?('.git')
         puts dir
         puts "-"*dir.size
         puts `git #{args}`
         puts "\n"
      end

   end
end
